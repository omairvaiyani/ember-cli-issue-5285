<div class='container'>
    <div class='card'>
        <h3 class="modal-title">{{title}}</h3>
        <!-- Author info -->
        <h4>AUTHOR</h4>
        {{#link-to 'user' author.slug tagName="a"}}{{render 'profile-image' author}}{{/link-to}}
        <div class="author-info inline-block">
            <p>{{#link-to 'user' author.slug tagName="a"}}{{author.name}}{{/link-to}}</p>

            <p>{{author.numberOfFollowers}} followers</p>
            {{#if currentUser}}
                {{#unless isCurrentUser}}
                    {{#if isFollowing}}
                        <p><a href="" {{action 'unfollowUser' author.content}}>Following</a></p>
                    {{else}}
                        <p><a href="" {{action 'followUser' author.content}}>Follow</a></p>
                    {{/if}}
                {{/unless}}
            {{/if}}
        </div>

        <hr>
        <h4>CATEGORY</h4>

        <p>{{#if category.parent}}{{#link-to 'category' category.parent.slug}}{{category.parent.name}}{{/link-to}}
            -{{/if}}
            {{#link-to 'category' category.slug}}{{category.name}}{{/link-to}}</p>

        {{#if description.length}}
            <hr>
            <h4>DESCRIPTION</h4>

            <p>{{description}}</p>
        {{/if}}
        <hr>
        <h4>STATS</h4>

        <p>{{_data.questions.length}} questions</p>

        <p>{{math-round averageScore 2}}% community average</p>

        <p>{{numberOfAttempts}} community attempts</p>

        <div class='row'>
            <div class='col-md-6 margin-top-16'>
                {{#if currentUser}}
                    {{#if isCurrentUser}}
                        {{#link-to 'edit' slug classNames='btn btn-primary'}}Edit{{/link-to}}
                    {{else}}
                        <button type="button" class="btn btn-info"
                            {{action 'sendPush' this 'toMobile' this.model}}>
                            <span class="glyphicon glyphicon-phone"></span> {{sendToMobileButtonText}}
                        </button>
                    {{/if}}
                {{/if}}
            </div>
            <div class='col-md-6 margin-top-16'>
                {{#link-to 'test' slug tagName='a' classNames="btn btn-primary pull-right"}}Take test{{/link-to}}
            </div>
        </div>
    </div>
</div>
