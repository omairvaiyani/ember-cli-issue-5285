<div class="mycqs-page-header index-page" id="parallax-image">
    <div class="container relative-container text-center">
        <h1><img src="img/mycqs-icon-header.png" class="inline-block margin-right-16"/>

            <div class="inline-block">MyCQs</div>
        </h1>

        <p>Create, practice and share multiple-choice questions</p>
    </div>

    <div class="soft-white"></div>
</div>
<div class="guest-page-actions">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6 col-sm-6 col-md-offset-3 col-sm-offset-3 text-center">
                <div class="search-box">
                    {{input type='text' value=searchTermForTests placeholder='Type here to search for a test' action='searchTests'
                       class='margin-bottom-16'}}
                    <span class="glyphicon glyphicon-search  glyphicon-search-large" {{action 'searchTests'}}></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 col-sm-6 col-md-offset-3 col-sm-offset-3 create-column text-center margin-bottom-16">
                {{#link-to 'create' tagName='a' classNames='btn btn-primary'}}
                    Create an MCQ test
                {{/link-to}}
            </div>
        </div>
    </div>
</div>

</div>
<div class="overlay-glass-pane"></div>
<div class="overlay-glass" id="parallax-overlay-glass">
    {{#if stats}}
        <div class="container relative-container text-center">
            <div class="row index-stats">
                <div class="col-md-3 col-sm-3 col-xs-6">
                    <div class="row">
                        <div class="col-md-12">
                            <h2>{{stats.numberOfUsers}}</h2>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <h3>Users</h3>
                        </div>
                    </div>
                </div>

                <div class="col-md-3 col-sm-3 col-xs-6">
                    <div class="row">
                        <div class="col-md-12">
                            <h2>{{stats.numberOfTests}}</h2>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <h3>Tests</h3>
                        </div>
                    </div>
                </div>

                <div class="col-md-3 col-sm-3 col-xs-6">
                    <div class="row">
                        <div class="col-md-12">
                            <h2>{{stats.numberOfQuestions}}</h2>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <h3>Questions</h3>
                        </div>
                    </div>
                </div>

                <div class="col-md-3 col-sm-3 col-xs-6">
                    <div class="row">
                        <div class="col-md-12">
                            <h2>{{stats.numberOfAttempts}}</h2>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <h3>Attempts</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {{/if}}
    <div class="soft-white"></div>
</div>
