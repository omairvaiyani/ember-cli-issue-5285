<div class="index-page-main">
    <div class="container-fluid">
        <div class="container">
            <section class="row">
                <article class="col-sm-12 text-center margin-top-16">
                    <h4 class="inline-block margin-right-16">Want to find out how Synap will improve your learning?</h4>
                    <button class="btn btn-ghost btn-with-icon" {{action 'indexLearnMoreScroll'}}>
                        <span class="inline-block">LEARN MORE</span>
                        <span class="right-section inline-block">
                            <i class="fa fa-arrow-circle-down"></i>
                        </span>
                    </button>
                </article>
            </section>
        </div>
        <div class="features-container margin-top-16">
            <hr class="no-margin">
            <div class="container">
                <section class="row">
                    <article class="col-xs-12 col-sm-6">
                        <br>

                        <h3 class="text-center" id="learn-more-flag">Let Us Handle Your Learning</h3>
                        <hr class="mini-hr">
                        <br>
                        <br>
                        <h4 class="text-center">Synap intelligently tracks what you study,
                            generating revision material that you need, when you need it.</h4>
                        <br>
                        <br>
                        <h4 class="text-center">
                            {{#link-to 'about.index'}}
                                <strong>See How it Works!</strong>
                            {{/link-to}}
                        </h4>
                    </article>
                    <article class="col-xs-12 col-sm-6">
                        <img src="img/iphone-mockup-home.png"/>
                    </article>
                </section>
            </div>
        </div>
        <section class="row stats-row" id="stats-row">
            <div class="icon-overlay"></div>
            <div class="container">
                <h3 class="text-center">Growing Community</h3>
                <hr class="mini-hr">
                <div class="row text-center">
                    <div class="col-sm-3 col-xs-6 margin-bottom-16">
                        <i class="stat-icon fa fa-fw fa-users inline-block"></i>

                        <div class="stat-right inline-block">
                            <p class="stat-number">
                                {{#if showStats}}
                                    {{count-up startVal=0 endVal=stats.numberOfUsers duration=3 decimals=0 useEasing=true
                                    useGrouping=true separator=',' decimal='.'}}
                                {{/if}}
                            </p>

                            <p class="stat-title">Users</p>
                        </div>
                    </div>

                    <div class="col-sm-3 col-xs-6 stats-column margin-bottom-16">
                        <i class="stat-icon fa fa-fw fa-th-list inline-block"></i>

                        <div class="stat-right inline-block">
                            <p class="stat-number">
                                {{#if showStats}}
                                    {{count-up startVal=0 endVal=stats.numberOfTests duration=3 decimals=0 useEasing=true
                                    useGrouping=true separator=',' decimal='.'}}
                                {{/if}}
                            </p>

                            <p class="stat-title">Tests</p>
                        </div>
                    </div>

                    <div class="col-sm-3 col-xs-6">
                        <i class="stat-icon fa fa-fw fa-question-circle inline-block"></i>

                        <div class="stat-right inline-block">
                            <p class="stat-number">
                                {{#if showStats}}
                                    {{count-up startVal=0 endVal=stats.numberOfQuestions duration=3 decimals=0 useEasing=true
                                    useGrouping=true separator=',' decimal='.'}}
                                {{/if}}
                            </p>

                            <p class="stat-title">Questions</p>
                        </div>
                    </div>

                    <div class="col-sm-3 col-xs-6">
                        <i class="stat-icon fa fa-fw fa-play inline-block"></i>

                        <div class="stat-right inline-block">
                            <p class="stat-number">
                                {{#if showStats}}
                                    {{count-up startVal=0 endVal=stats.numberOfAttempts duration=3 decimals=0 useEasing=true
                                    useGrouping=true separator=',' decimal='.'}}
                                {{/if}}
                            </p>

                            <p class="stat-title">Attempts</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <section class="row featured-by-row">
            <div class="container">

                <h3 class="text-center">Featured by</h3>
                <hr class="mini-hr">

                <div class="row margin-top-16 margin-bottom-16 achievements-row">
                    <div class="col-sm-4 col-xs-6 achievement-cell">
                        <a href="http://uk.businessinsider.com/synaps-app-students-edtech-oxford-lse-1st-quiz-exams-2015-10"
                           target="_blank">
                            <img src="img/bi-logo.png"/>
                        </a>
                    </div>
                    <div class="col-sm-4 col-xs-6 achievement-cell">
                        <a href="http://thetab.com/uk/leeds/2015/10/29/leeds-medical-student-launches-app-18802?utm_source=local&utm_medium=facebook&utm_campaign=pages"
                           target="_blank">
                            <img src="img/tab-logo.png"/>
                        </a>
                    </div>
                    <div class="col-sm-4 col-xs-6 achievement-cell">
                        <a href="http://www.theguardian.com/simply-business-partner-zone/2015/oct/07/become-graduate-entrepreneur-guide-startups"
                           target="_blank">
                            <img src="img/guardian-logo.png"/>
                        </a>
                    </div>

                    <div class="col-sm-4 col-xs-6 achievement-cell">
                        <a href="http://www.jisc.ac.uk/student-innovation" target="_blank">
                            <img src="img/jisc-logo.png"/>
                        </a>
                    </div>

                    <div class="col-sm-4 col-xs-6 achievement-cell">
                        <a href="http://crowdcube.com" target="_blank">
                            <img src="img/crowdcube-logo.png"/>
                        </a>
                    </div>

                    <div class="col-sm-4 col-xs-6 achievement-cell">
                        <a href="http://www.thebusinessdesk.com/yorkshire/news/725346-edtech-entrepreneurs-launch-180-000-crowdfunding-campaign.html"
                           target="_blank">
                            <img src="img/business-desk-logo.png"/>
                        </a>
                    </div>
                </div>
            </div>
        </section>

        <section class="row">
            <article class="col-xs-12 text-center">
                <button class="btn btn-ghost btn-with-icon" {{action 'indexBackToTopScroll'}}>
                    <span class="inline-block">Join the Synap beta today!</span>
                        <span class="right-section inline-block">
                            <i class="fa fa-arrow-circle-up"></i>
                        </span>
                </button>
            </article>
        </section>

    </div>
</div>
