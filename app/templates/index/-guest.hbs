<video autoplay loop id="index-page-video">
    <source src="/assets/index-cover-video.mp4" type="video/mp4">
</video>

{{#if showFullAnimationVideo}}
    <div class="full-animation-video-container">
        <iframe width="960" height="540" src="https://www.youtube.com/embed/pia1tog0oiY"
                frameborder="0" allowfullscreen id="embeddedVideo"></iframe>
    </div>
{{/if}}

<div class="index-page-cover" id="join-beta-flag">
    <div class="dark-overlay"></div>

    <div class="play-video" {{action 'toggleAnimationVideoContainer'}}>
        <i class="fa fa-fw fa-play-circle-o icon margin-right-8"></i>
        <h4 class="play-title">See How</h4>
    </div>

    <div class="container text-center">
        <h1 class="margin-top-16">
            <strong>Learn more in less time. For free.</strong>
        </h1>
        {{#if betaUnlocked}}
            <button class="btn btn-danger btn-with-icon"
                {{action 'openModal' 'application/modal/register'}}>
                <span class="inline-block">GET STARTED</span>
            <span class="right-section inline-block">
                <i class="fa fa-arrow-right"></i>
            </span>
            </button>
        {{/if}}

    </div>
    <div class="guest-page-actions page-header-action-container">
        {{#if betaUnlocked}}
            <div class="input-group">
                {{main-search
                parentController=this
                hideSearchIcon=true
                searchTerm=navbarSearchTerm
                searchPlaceholder="Search for revision material"
                }}
                <span class="input-group-addon search-icon">
                    <i class="fa fa-search"></i>
                </span>
            </div>
        {{else}}
            <h3 class="title-header">Join the Synap Beta while you can!</h3>

            <div class="input-group margin-top-8">
                <!-- Begin MailChimp Signup Form -->
                <div id="mc_embed_signup">
                    <form action="//synap.us11.list-manage.com/subscribe/post?u=51ca31008b1ce9e8b014cb7fd&amp;id=847d861af1"
                          method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate"
                          target="_blank" novalidate>
                        <div id="mc_embed_signup_scroll">
                            <div class="mc-field-group">
                                {{input type="email" class="form required email" value=synapBetaEmail
                                placeholder="Enter your email and we'll be in touch" id="mce-EMAIL"
                                name="EMAIL" action="subscribeEmailForBeta"}}
                            </div>
                            <div id="mce-responses" class="clear">
                                <div class="response" id="mce-error-response" style="display:none"></div>
                                <div class="response" id="mce-success-response" style="display:none"></div>
                            </div>    <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
                            <div style="position: absolute; left: -5000px;">
                                <input type="text" name="b_51ca31008b1ce9e8b014cb7fd_847d861af1" tabindex="-1" value="">
                            </div>
                            <div class="clear">
                                <input type="submit" value="Subscribe" name="subscribe" id="mc-embedded-subscribe"
                                       class="hidden">
                            </div>
                            <span class="input-group-addon search-icon" {{action "subscribeEmailForBeta"}}>
                                <i class="fa fa-envelope fa-fw"></i>
                            </span>
                        </div>
                    </form>
                </div>

                <!--End mc_embed_signup-->
            </div>
        {{/if}}
    </div>
</div>
