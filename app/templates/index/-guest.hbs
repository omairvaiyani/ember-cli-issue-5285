<div class="index-page-main">
    <div class="container-fluid">
        <div class="container">
            <section class="row">
                <article class="col-sm-12 text-center margin-top-16">
                    <h4 class="inline-block margin-right-16">Want to find out how Synap will improve your learning?</h4>
                    <button class="btn btn-ghost btn-with-icon" {{action 'indexLearnMoreScroll'}}>
                        <span class="inline-block">LEARN MORE</span>
                        <span class="right-section inline-block">
                            <i class="fa fa-arrow-circle-down"></i>
                        </span>
                    </button>
                </article>
            </section>
        </div>
        <div class="features-container margin-top-16">
            <hr class="no-margin">
            <div class="container">
                <section class="row">
                    <article class="col-xs-12 col-sm-6">
                        <br>

                        <h3 class="text-center" id="learn-more-flag">Let Us Handle Your Learning</h3>
                        <hr class="mini-hr">
                        <br>
                        <br>
                        <h4 class="text-center">Synap intelligently tracks what you study,
                            generating revision material that you need, when you need it.</h4>
                        <br>
                        <br>
                        <h4 class="text-center">
                            {{#link-to 'about.howItWorks'}}
                                <strong>See How it Works!</strong>
                            {{/link-to}}
                        </h4>
                    </article>
                    <article class="col-xs-12 col-sm-6">
                        <img src="img/iphone-mockup-home.png"/>
                    </article>
                </section>
            </div>
        </div>
        <section class="row stats-row" id="stats-row">
            <div class="icon-overlay"></div>
            <div class="container">
                <h3 class="text-center">Growing Community</h3>
                <hr class="mini-hr">
                <div class="row text-center">
                    <div class="col-sm-3 col-xs-6 margin-bottom-16">
                        <i class="stat-icon fa fa-fw fa-users inline-block"></i>

                        <div class="stat-right inline-block">
                            <p class="stat-number">
                                {{#if showStats}}
                                    {{count-up startVal=0 endVal=stats.numberOfUsers duration=2 decimals=0 useEasing=true
                                    useGrouping=true separator=',' decimal='.'}}
                                {{/if}}
                            </p>

                            <p class="stat-title">Users</p>
                        </div>
                    </div>

                    <div class="col-sm-3 col-xs-6 stats-column margin-bottom-16">
                        <i class="stat-icon fa fa-fw fa-th-list inline-block"></i>

                        <div class="stat-right inline-block">
                            <p class="stat-number">
                                {{#if showStats}}
                                    {{count-up startVal=0 endVal=stats.numberOfTests duration=2 decimals=0 useEasing=true
                                    useGrouping=true separator=',' decimal='.'}}
                                {{/if}}
                            </p>

                            <p class="stat-title">Tests</p>
                        </div>
                    </div>

                    <div class="col-sm-3 col-xs-6">
                        <i class="stat-icon fa fa-fw fa-question-circle inline-block"></i>

                        <div class="stat-right inline-block">
                            <p class="stat-number">
                                {{#if showStats}}
                                    {{count-up startVal=0 endVal=stats.numberOfQuestions duration=2 decimals=0 useEasing=true
                                    useGrouping=true separator=',' decimal='.'}}
                                {{/if}}
                            </p>

                            <p class="stat-title">Questions</p>
                        </div>
                    </div>

                    <div class="col-sm-3 col-xs-6">
                        <i class="stat-icon fa fa-fw fa-play inline-block"></i>

                        <div class="stat-right inline-block">
                            <p class="stat-number">
                                {{#if showStats}}
                                    {{count-up startVal=0 endVal=stats.numberOfAttempts duration=2 decimals=0 useEasing=true
                                    useGrouping=true separator=',' decimal='.'}}
                                {{/if}}
                            </p>

                            <p class="stat-title">Attempts</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <section class="row featured-by-row">
