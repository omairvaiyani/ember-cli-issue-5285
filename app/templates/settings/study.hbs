<h3>Study settings</h3>

<form class="form-horizontal">

    <div class="form-group">
        <label class="col-sm-6 control-label">Activate 'Spaced Practice'</label>
        <div class="col-sm-6">
            <div class="togglebutton togglebutton-primary">
                <label class="pull-right">
                    {{input type="checkbox" checked=currentUser.srActivated}}
                    <span class="toggle"></span>
                </label>
            </div>
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-6 control-label">Study intensity</label>
        <div class="col-sm-5">
            {{input type="range" min=1 max=4 value=currentUser.srIntensityLevel class='inline-block'}}
        </div>
        <label class="col-sm-1 control-label"><strong></{{currentUser.srIntensityLevel}}</strong></label>
    </div>
</form>