{{!-- DEPRECATED: USE login.hbs or register.hbs --}}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span
            class="sr-only">Close</span></button>
    <h4 class="modal-title">Login to Synap</h4>
</div>
<div class="modal-body">
    <div id="login-carousel" class="carousel slide" data-ride="carousel" data-pause="">

        <div class="container-fluid text-center login-item">
            <button class="btn btn-facebook" {{action 'facebookConnect'}}>
                <i class="fa fa-facebook margin-right-16"></i>Connect with Facebook
            </button>
            <hr>
            <div class="form-group">
                <div class="row">
                    <div class="row margin-bottom-16">
                        <div class="col-md-12 text-center">
                            <h4>Log in using your email</h4>
                        </div>
                    </div>
                    <div class="row margin-bottom-16">
                        <div class="col-md-8 col-md-offset-2 text-center">
                            {{input type='email' value=loginUser.email placeholder='Email'
                            action='login' classNames='form-control'}}
                        </div>
                    </div>
                    <div class="row margin-bottom-16">
                        <div class="col-md-8 col-md-offset-2 text-center">
                            {{input type='password' value=loginUser.password placeholder='Password'
                            action='login' classNames='form-control'}}
                        </div>
                    </div>
                    <div class="row margin-bottom-16">
                        <div class="col-md-8 col-md-offset-2">
                            <a href='' class='forgot-password pull-left' {{action 'forgotPassword'}}>Forgot
                                password</a>
                            {{#if loginMessage.error}}
                                <span class="alert alert-danger login-connecting-error pull-right">{{loginMessage.error}}</span>
                            {{else}}
                                {{#if loginMessage.connecting}}
                                    <span class="alert alert-info login-connecting-error pull-right">{{loginMessage.connecting}}</span>
                                {{else}}
                                    <button class="btn btn-primary pull-right" {{action 'login'}}>Login</button>
                                {{/if}}
                            {{/if}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-8 col-md-offset-2 text-center">
                <p>Synap is in an invite-only beta.</p>
                {{#if betaUnlocked}}
                    {{#link-to 'join'}}Register a free account{{/link-to}}
                {{else}}
                {{/if}}
            </div>
        </div>
        <hr>
        <div class="row">
            <div class="col-md-12 text-center">
                <p>View our <a href='/privacy-policy' target="_blank">Privacy Policy</a>
                    and <a href='/terms' target="_blank">Terms & Conditions</a>.</p>
            </div>
        </div>
    </div>
</div> <!-- /modal-body -->