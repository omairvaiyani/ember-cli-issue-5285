<div class="modal-body synap-modal">
    <div class="container-fluid text-center">
        <section class="row margin-top-16">
            <article class="col-xs-12 text-center">
                <h4 class="title">Synap is in an invite-only beta.</h4>
            </article>
        </section>
        <hr class="mini-hr">
        <section class="row margin-bottom-16">
            <article class="col-xs-12 col-sm-8 col-sm-offset-2">
                <button class="btn btn-facebook no-margin" {{action 'facebookConnect'}}>
                    <i class="fa fa-facebook margin-right-16"></i>Sign in with Facebook
                </button>
            </article>
        </section>

            <span class="or-wrapper">
                <span class="or-text">Or</span>
            </span>

        <form>
            <fieldset>
                <div class="row margin-bottom-16">
                    <div class="col-xs-12 col-md-8 col-md-offset-2 text-center">
                        <div class="form-control-wrapper">
                            {{input type='email' value=loginUser.email
                            classNameBindings=":form-control loginUser.email.length::empty"}}
                            <div class="floating-label">Email</div>
                            <span class="material-input"></span>
                        </div>
                    </div>
                </div>
                <div class="row margin-bottom-16">
                    <div class="col-xs-12 col-md-8 col-md-offset-2 text-center">
                        <div class="form-control-wrapper margin-top-16">
                            {{input type='password' value=loginUser.password
                            classNameBindings=":form-control loginUser.password.length::empty"}}
                            <div class="floating-label">Password</div>
                            <span class="material-input"></span>
                        </div>
                    </div>
                </div>
            </fieldset>
            {{#if loginMessage.error}}
                <div class="col-xs-12 col-sm-8 col-sm-push-2 text-center sign-up-validation margin-bottom-16">
                    <span class="alert alert-danger">{{loginMessage.error}}</span>
                </div>
            {{/if}}
            <div class="row margin-bottom-16">
                <div class="col-md-8 col-md-offset-2">
                    <span class='forgot-password linkify pull-left small' {{action 'forgotPassword'}}>
                        Forgot password
                    </span>
                    {{async-button default="Login" action="login" class="btn btn-primary pull-right"
                    pending="Logging in..." reset="true" success="Logged in!" type="submit"}}
                </div>
            </div>
        </form>
    </div>
    <div class="row">
        <div class="col-md-8 col-md-offset-2 text-center margin-bottom-16">
            {{#if betaUnlocked}}
                <span class="linkify small" {{action 'openModal' 'application/modal/register' 'application'}}>
                    Register a free account
                </span>
            {{/if}}
        </div>
    </div>
</div> <!-- /modal-body -->