<div class="text-center">
    <button class="btn btn-facebook" {{action 'facebookConnect'}}>
        <i class="fa fa-facebook margin-right-16"></i>Sign up with Facebook
    </button>
</div>

<span class="or-wrapper">
    <span class="or-text">Or</span>
</span>

<h4>Name</h4>

<div class="row">
    <div class="col-md-12 margin-bottom-16">
        {{input type='text' value=newUser.name action='submitSignUp'
        placeholder='Please enter your full name' classNames='form-control'}}
    </div>
    {{#if signUpValidationErrors.name}}
        <div class="col-md-12 text-center sign-up-validation margin-bottom-16">
            <span class="alert alert-danger">Full name please!</span>
        </div>
    {{/if}}
</div>

<h4>Email</h4>

<div class="row">
    <div class="col-md-12 margin-bottom-16">
        {{input type='email' value=newUser.email action='submitSignUp'
        placeholder='University or college email recommended' classNames='form-control'}}
    </div>
    {{#if signUpValidationErrors.email}}
        <div class="col-md-12 text-center sign-up-validation margin-bottom-16">
            <span class="alert alert-danger">Invalid email</span>
        </div>
    {{/if}}
</div>

<h4>Password</h4>

<div class="row">
    <div class="col-md-12 margin-bottom-16">
        {{input type='password' value=newUser.password action='submitSignUp'
        placeholder='Enter a password' classNames='form-control'}}
    </div>
    {{#if signUpValidationErrors.password}}
        <div class="col-md-12 text-center sign-up-validation margin-bottom-16">
            <span class="alert alert-danger">Min 6 characters</span>
        </div>
    {{/if}}
</div>

<div class="row">
    <div class="col-md-12 text-center margin-bottom-16">
        {{async-button class='btn btn-primary' action='signUp' default='Sign up!'
        pending='Signing up...' fulfilled='Signed up!' rejected='Error!' reset=true
        id="sign-up-button"}}
    </div>
</div>

<div class="row">
    <div class="col-md-12 text-center margin-bottom-16">
        <span class="linkify" {{action 'openModal' 'application/modal/login' 'application'}}
                >I already have an account</span>
    </div>

</div>

<div class="row">
    <div class="col-md-12 text-center">
        <p>By clicking 'Sign up!' you accept that you have read (and agree to) our
            <a href='/privacy-policy' target="_blank">Privacy Policy</a>
            and <a href='/terms' target="_blank">Terms & Conditions</a>.</p>
    </div>
</div>