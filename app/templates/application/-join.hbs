<section class="row">
    <article class="col-xs-12 col-sm-8 col-sm-offset-2 text-center">
        <button class="btn btn-facebook no-margin" {{action 'facebookConnect'}}>
            <i class="fa fa-facebook margin-right-16"></i>Sign in with Facebook
        </button>
    </article>
</section>

<span class="or-wrapper">
    <span class="or-text">Or</span>
</span>

<form>
    <fieldset>
        <div class="row margin-bottom-16">
            <div class="col-xs-12 col-sm-8 col-sm-push-2">
                <div class="form-control-wrapper">
                    {{input type='text' value=newUser.name
                    classNameBindings=":form-control newUser.name.length::empty"}}
                    <div class="floating-label">Full Name</div>
                    <span class="material-input"></span>
                </div>
            </div>
            {{#if signUpValidationErrors.name}}
                <div class="col-xs-12 col-sm-8 col-sm-push-2 text-center sign-up-validation margin-bottom-16">
                    <span class="alert alert-danger">{{signUpValidationErrors.name}}</span>
                </div>
            {{/if}}
        </div>

        <div class="row margin-bottom-16">
            <div class="col-xs-12 col-sm-8 col-sm-push-2">
                <div class="form-control-wrapper margin-top-16">
                    {{input type='email' value=newUser.email
                    classNameBindings=":form-control newUser.email.length::empty"}}
                    <div class="floating-label">Email</div>
                    <span class="material-input"></span>
                </div>
            </div>
            {{#if signUpValidationErrors.email}}
                <div class="col-xs-12 col-sm-8 col-sm-push-2 text-center sign-up-validation margin-bottom-16">
                    <span class="alert alert-danger">{{signUpValidationErrors.email}}</span>
                </div>
            {{/if}}
        </div>

        <div class="row">
            <div class="col-xs-12 col-sm-8 col-sm-push-2">
                <div class="form-control-wrapper margin-top-16">
                    {{input type='password' value=newUser.password
                    classNameBindings=":form-control newUser.password.length::empty"}}
                    <div class="floating-label">Password</div>
                    <span class="material-input"></span>
                </div>
            </div>
            {{#if signUpValidationErrors.password}}
                <div class="col-xs-12 col-sm-8 col-sm-push-2 text-center sign-up-validation margin-bottom-16">
                    <span class="alert alert-danger">{{signUpValidationErrors.password}}</span>
                </div>
            {{/if}}
        </div>
    </fieldset>
    <div class="row">
        <div class="col-xs-12 col-sm-8 col-sm-push-2 text-center margin-bottom-16">
            {{async-button class='btn btn-primary' action='signUp' default='Sign up!'
            pending='Signing up...' fulfilled='Signed up!' rejected='Error!' reset=true
            id="sign-up-button" type="submit"}}
        </div>
        {{#if signUpValidationErrors.signUp}}
            <div class="col-xs-12 col-sm-8 col-sm-push-2 text-center sign-up-validation margin-bottom-16">
                <span class="alert alert-danger">{{signUpValidationErrors.signUp}}</span>
            </div>
        {{/if}}
    </div>
</form>

<div class="row">
    <div class="col-md-12 text-center margin-bottom-16">
        <span class="linkify small" {{action 'openModal' 'application/modal/login' 'application'}}>
            I already have an account
        </span>
    </div>

</div>

<div class="row">
    <div class="col-md-12 text-center">
        <p class="small">By clicking 'Sign up!' you accept that you have read (and agree to) our
            <a href='/privacy-policy' target="_blank">Privacy Policy</a>
            and <a href='/terms' target="_blank">Terms & Conditions</a>.</p>
    </div>
</div>