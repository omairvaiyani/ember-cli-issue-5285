{{#unless minimalNavbar}}
    <nav {{bind-attr class=":navbar :navbar-main navbarTransparent navbarHidden:hidden"}} role="navigation">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle sidebar-toggle pull-left" {{action "sidebarToggle"}}>
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                {{#link-to 'index' tagName='a' classNames='navbar-brand navbar-brand-adjust'}}
                    {{#if loadingItems}}
                        <img src="img/loading-white.gif" height="45px" class="logo-icon margin-right-16"/>
                    {{else}}
                        <img src="img/logo-wide.png" height="45px" class="logo-icon margin-right-16"/>
                    {{/if}}
                {{/link-to}}
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-navbar-collapsing">
                <ul class="nav navbar-nav">
                    {{#if currentUser}}
                        {{#link-to 'create' tagName='li' title='MCQ Quiz Maker'}}
                            {{#link-to 'create' tagName='a'}}
                                Create
                            {{/link-to}}
                        {{/link-to}}
                        {{#link-to 'index' tagName='li' title='My Quizzes'}}
                            {{#link-to 'index' tagName='a'}}
                                Practice
                            {{/link-to}}
                        {{/link-to}}
                    {{/if}}
                    {{#if betaUnlocked}}
                        {{#link-to 'browse' tagName='li' title='Search for quizzes'}}
                            {{#link-to 'browse' tagName='a'}}
                                Browse
                            {{/link-to}}
                        {{/link-to}}
                    {{/if}}
                    <!-- About dropdown menu-->
                    {{#unless currentUser}}
                        {{#link-to 'about.team' tagName='li' title='Synap Team'}}
                            {{#link-to 'about.team' tagName='a'}}
                                About
                            {{/link-to}}
                        {{/link-to}}
                        {{#link-to 'about.howItWorks' tagName='li' title='How it Works'}}
                            {{#link-to 'about.howItWorks' tagName='a'}}
                                How it Works
                            {{/link-to}}
                        {{/link-to}}
                        <li title='Synap Blog'>
                            <a href="http://synap.ac/blog">
                                Blog
                            </a>
                        </li>
                        {{#link-to 'about.contact' tagName='li' title='Contact Us'}}
                            {{#link-to 'about.contact' tagName='a'}}
                                Contact
                            {{/link-to}}
                        {{/link-to}}
                    {{/unless}}
                </ul>
                {{#if betaUnlocked}}
                    {{#unless hideNavbarSearch}}
                        {{partial 'application/navbar/search-bar'}}
                    {{/unless}}
                {{/if}}
                <ul class="nav navbar-nav navbar-right">
                    {{#if currentUser}}
                        {{partial 'application/navbar/user-messages'}}
                        <!-- account actions -->
                        {{partial 'application/navbar/current-user'}}
                    {{else}}
                        <li class="log-in-join">
                            <a href="javascript:void(0)" {{action 'openModal' 'application/modal/login'
                            'application'}}>
                                Log in
                            </a>
                        </li>
                        {{#if betaUnlocked}}
                            <li class="log-in-join">
                                <a href="javascript:void(0)" {{action 'openModal' 'application/modal/register'
                                'application'}}>
                                    Register
                                </a>
                            </li>
                        {{/if}}
                    {{/if}}
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container-fluid -->
    </nav>
{{else}}
    <nav class="navbar navbar-main">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                {{#link-to 'index' tagName='a' classNames='navbar-brand navbar-brand-adjust'}}
                    {{#if loadingItems}}
                        <img src="img/loading-white.gif" height="45px" class="logo-icon"/>
                    {{else}}
                        <img src="img/logo-wide.png" height="45px" class="logo-icon"/>
                    {{/if}}
                {{/link-to}}
            </div>
        </div>
    </nav>
{{/unless}}