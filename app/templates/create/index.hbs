<div class="row">
    <div class="col-md-12">
        <h3>Create a new test{{#if selectedGroup}} for
            {{#link-to 'group' selectedGroup.slug}}{{selectedGroup.name}}{{/link-to}}{{/if}}</h3>
    </div>
</div>
{{partial "edit/test-detail"}}
<div class="row margin-top-16">
    <div class="col-md-12">
        {{#if currentUser}}
            <button class="btn btn-primary action-button pull-right" id="add-questions" {{action "checkTest"}}
                    >Add questions</button>
        {{else}}
            <button class="btn btn-success pull-right" {{action "checkTest"}}>Save and continue</button>
        {{/if}}
    </div>
</div>