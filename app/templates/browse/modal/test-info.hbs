<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span
            class="sr-only">Close</span></button>
    <h4 class="modal-title">{{#link-to 'testInfo' slug}}{{title}}{{/link-to}}</h4>
</div>
<div class="container-fluid test-info-modal">
   {{partial 'test/test-info-base'}}
</div>
<div class="modal-footer">
    {{#if currentUser}}
        {{#if currentUser.isMobileUser}}
            <button type="button" class="btn btn-info pull-left"
                {{action 'sendPush' this 'toMobile' this.model}}><span
                    class="glyphicon glyphicon-phone"></span> {{sendToMobileButtonText}}
            </button>
        {{/if}}
    {{/if}}

    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    {{#link-to 'test' slug tagName='a' classNames="btn btn-primary"}}Take test{{/link-to}}
</div>