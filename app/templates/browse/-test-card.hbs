<div class="row">
    <div class="col-md-12">
        <div class="card test-info-card margin-top-16">
            {{#link-to 'user' author.slug tagName="a"}}{{render 'profile-image' author}}{{/link-to}}

            <small class="moments-ago pull-right"
                    >{{view 'from-now' valueBinding="updatedAt"}}</small><br>
            <small class="test-actions">
                {{#if isCurrentUsersTest}}
                    {{#link-to 'edit' this.slug tagName='a'}}Edit{{/link-to}}
                {{/if}}
            </small>

            <div class="title-and-category">
                <p class="lead">
                    {{#link-to 'test' this.slug tagName='a'}}{{title}}{{/link-to}}
                </p>
                <p>
                    {{#link-to 'category' category.slug tagName='a'}}{{category.name}}{{/link-to}}
                </p>
            </div>

            <div class="statistics">
                <div class="inline-block"><p class="lead">Q - {{_data.questions.length}}</p></div>
                <div class="inline-block"><p class="lead">U - {{uniqueAverageScore}}%</p></div>
            </div>

        </div>
    </div>
</div>