<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span
            class="sr-only">Close</span></button>
    <h4 class="modal-title">Add members</h4>
</div>
<div class="modal-body">
    <div class="form-control taggable-input margin-bottom-16">
        {{#each member in selectedSuggestedMembers}}
            <label class="default-tag">
                {{member.name}}
                <i class="fa fa-times-circle delete-tag" title="remove this member"
                    {{action 'unselectSuggestedMember' member}}></i>
            </label>
        {{/each}}
        {{input type="text" value=suggestedMemberName id='suggestedMemberName'
        placeholder="Who do you want to add as a member?"}}
    </div>
    {{#if suggestedMembers.length}}
        <div class="autocomplete-container">
            {{#each member in suggestedMembers}}
                <div {{bind-attr class=':autocomplete-row'}} {{action 'selectSuggestedMember' member}}>
                    {{render 'profile-image' member.profileImageUrl}}
                    <div class="title"><p>{{member.name}}</p></div>
                </div>
            {{/each}}
        </div>
    {{/if}}
</div>
<div class="modal-footer">
    {{#if selectedSuggestedMembers.length}}
        {{async-button
        class="btn btn-primary" action="addMembersToGroup"
        default="Add members" pending="Adding..."
        fulfilled='Members added!' rejected='Error! Try again later'
        }}
    {{else}}
        <button class="btn btn-primary" disabled>
            Add members
        </button>
    {{/if}}
</div>

