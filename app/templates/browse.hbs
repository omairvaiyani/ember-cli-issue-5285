<div class="page-header with-action-container margin-bottom-0">
    <div class="dark-overlay"></div>
    <div class="content-body">
        <h1 class="title">Browse</h1>
        <h4 class="subtitle">Search quizzes from hundreds of subjects!</h4>
    </div>
    <div class="page-header-action-container">
        <div class="input-group">
            {{main-search
            parentController=this
            hideSearchIcon=true
            searchTerm=navbarSearchTerm
            searchPlaceholder="Search for revision material"
            }}
            <span class="input-group-addon search-icon">
                    <i class="fa fa-search"></i>
                </span>
        </div>
    </div>
</div>
<div class="container-fluid margin-bottom-16 card browse-card">

    {{!-- Hot Tests --}}
    <h3 class="hot-tests-title text-center">
        <i class="fa fa-fw fa-fire icon"></i>
        Hot Tests
    </h3>

    <section class="row">
        <article class="col-xs-12 col-md-8 col-md-push-2">
            <div class="hot-tests-container text-center">
                {{#each hotTests as |test|}}
                    {{test-card test=test parentController=this cardType="hotTest" class="inline-block"}}
                {{/each}}
            </div>
        </article>
    </section>

    <hr class="full-hr"/>

    {{!-- Subjects --}}
    <h3 class="text-center">
        All Subjects
    </h3>
    <hr class="mini-hr"/>

    <section class="row">
        <article class="col-xs-12 text-center">
            <div class="subject-grid-container">
                {{#each category in content}}
                    <div class="subject-container inline-block">
                        {{#link-to 'category' category.slug}}
                            {{svg-icon icon=category.name width=100 height=100 margin='auto'}}
                        {{/link-to}}
                        <h4>
                            {{#link-to 'category' category.slug tagName='a'}}
                                {{category.name}}
                            {{/link-to}}
                        </h4>

                        <p class="subtitle">{{category.totalTests}} tests</p>
                    </div>
                {{/each}}
            </div>
        </article>
    </section>

</div>