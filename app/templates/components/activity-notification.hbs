<div class="activity-notification">
    {{profile-picture user=latestActor height=32 width=32 doNotLink=true class="inline-top margin-top-4"}}
    <div class="inline-block right">
        <p class="no-margin">
            {{{actorNames}}}

            {{#if followActivity}}
                started following you!
            {{/if}}

            {{#if attemptActivity}}
                {{#if multipleTargets}}
                    took {{allTargets.length}} of your quizzes!
                {{else}}
                    took your quiz <strong class="linkify">{{latestObject.test.title}}</strong>
                {{/if}}
            {{/if}}
        </p>
        <p class="margin-top-8 margin-bottom-0">
            {{#if attemptActivity}}
                {{#if multipleTargets}}
                    {{#each allTargets as |test|}}
                        <strong class="linkify">{{test.title}}</strong> <br>
                    {{/each}}
                {{/if}}
            {{/if}}
        </p>
        <p class="small no-margin pull-right">
            {{from-now time=latestTime showIcon=true mini=true}}
        </p>
    </div>
</div>