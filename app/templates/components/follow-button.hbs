{{#if defaultButton}}
    {{#if showFollow}}
        <button class="btn btn-default btn-xs follow-button margin-top-0 margin-bottom-0"
            {{action 'followUser' user}}>
            Follow
        </button>
    {{/if}}

    {{#if showUnfollow}}
        <button class="btn btn-default btn-xs follow-button unfollow margin-top-0 margin-bottom-0"
            {{action 'unfollowUser' user}}>
            Unfollow
        </button>
    {{/if}}
{{/if}}

{{#if miniButton}}
    {{#if showFollow}}
        <button class="btn btn-default btn-sm follow-button mini margin-top-0 margin-bottom-0"
            {{action 'followUser' user}}>
            <i class="fa fa-fw fa-user-plus"></i>
        </button>
    {{/if}}

    {{#if showUnfollow}}
        <button class="btn btn-default btn-sm follow-button mini unfollow  margin-top-0 margin-bottom-0"
            {{action 'unfollowUser' user}}>
            <i class="fa fa-fw fa-user-times"></i>
        </button>
    {{/if}}
{{/if}}