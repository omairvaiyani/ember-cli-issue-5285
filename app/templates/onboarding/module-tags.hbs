<div class="study-profile">
    <h5 class="margin-bottom-8"><i class="fa fa-fw fa-book margin-right-8"></i>{{user.studying}}</h5>
    <h5 class="margin-bottom-8"><i class="fa fa-fw fa-university margin-right-8"></i>{{user.placeOfStudy}}</h5>
    <h5 class="margin-bottom-8"><i class="fa fa-fw fa-group margin-right-8"></i>{{user.studyYear}}</h5>
    <hr>
    <h5><strong>Modules</strong></h5>
    <ul class="tags margin-bottom-16">
        {{#each user.moduleTags as |tag index|}}
            <li class="tag">{{tag}}<i class="fa fa-fw fa-close" {{action "removeModuleTag" index}}></i></li>
        {{/each}}
        <li class="tag default">
            {{input type="text" value=newModuleTag action="addNewModuleTag" placeholder="Module name"
            id="onboarding-addNewModuleTag"}}
            <i {{bind-attr class=":fa :fa-fw :fa-plus :add-tag newModuleTag.length::close-tag"}}
                {{action 'addNewModuleTag'}}></i>
        </li>
    </ul>
</div>


