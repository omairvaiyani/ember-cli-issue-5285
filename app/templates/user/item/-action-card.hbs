<div class="row">
    <div class="col-md-12">
        <div class="card action-card margin-top-16">
            {{#link-to 'user' userAction.user.slug
            tagName='a'}}{{render 'profile-image' userAction.user}}{{/link-to}}

            <div class="action-title">
                <p>{{#link-to 'user' userAction.user.slug}}
                    {{userAction.user.name}}{{/link-to}}
                    {{userAction.title}}</p>
                <p>
                    {{#if userAction.test}}
                        {{#link-to 'testInfo' userAction.test.slug}}{{userAction.test.title}}{{/link-to}}
                        <small> in </small>
                        {{#link-to 'category' userAction.test.category.slug}}{{userAction.test.category.name}}{{/link-to}}
                    {{/if}}
                </p>
            </div>
            <small class="moments-ago pull-right">
                {{from-now time=userAction.createdAt}}
            </small>
        </div>
    </div>
</div>