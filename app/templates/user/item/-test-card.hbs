<div class="row">
    <div class="col-md-12">
        <div class="card test-info-card margin-top-16">
            {{#link-to 'user' author.slug tagName="a"}}{{render 'profile-image' author}}{{/link-to}}


            <small class="test-actions">
                {{#if isCurrentUsersTest}}
                    {{#link-to 'edit' slug tagName='a'}}<p>Edit</p>{{/link-to}}
                {{/if}}
            </small>

            <div class="title-and-category">
                <h4>
                    {{#link-to 'testInfo' slug tagName='a'}}{{title}}{{/link-to}}
                </h4>

                <p>
                    {{#link-to 'category' category.slug tagName='a'}}{{category.name}}{{/link-to}}
                </p>
            </div>

            <div class="statistics">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-3">
                            <div class="text-center"><p>Q{{_data.questions.length}}</p></div>
                        </div>
                        <div class="col-md-5">
                            {{#if latestAttempt}}
                                <div class="text-center">{{#link-to 'result' latestAttempt}}
                                    <p>Last score {{latestAttempt.score}}%</p>{{/link-to}}</div>
                            {{else}}
                                <div class="text-center"><p>No attempts</p></div>
                            {{/if}}
                        </div>
                    </div>
                </div>

            </div>

        </div>
    </div>
</div>