<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="row">
                    <div class="col-md-12 margin-bottom-16">
                        <h3>{{#link-to 'testInfo' model.slug}}{{model.title}}{{/link-to}} <small>{{model.category.name}}</small>
                            {{#if group}}{{#link-to 'group' group.slug}}<small>{{group.name}}</small>{{/link-to}}{{/if}}</h3>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <button type="button" class="btn btn-info margin-right-16"
                                data-toggle="collapse"
                                data-target="#editTestDetail">
                            Edit test details
                        </button>
                        <button type="button" class="btn btn-success  margin-right-16" {{action 'saveTest'}}>
                            Save test
                        </button>
                        {{#link-to 'test' model.slug tagName="button" class="btn btn-xing"}}
                            Take test
                        {{/link-to}}
                    </div>
                </div>
                <div id="editTestDetail" class="collapse out">
                    {{partial "edit/test-detail"}}
                </div>
                <small class="edit-test-saved text-center">
                    <span>Test saved {{from-now time=model.updatedAt}}</span>
                </small>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-3">
            <div class="card margin-top-16">
                <div class="row">
                    <div class="col-md-12">
                        <h5>QUESTIONS LIST</h5>
                        {{#each model.questions itemController='edit.item.question' as |question index|}}
                            {{#link-to 'editQuestion' question.model tagName='div' class='question-list-item-row row'}}
                                <div {{bind-attr class=':col-md-12 :question-list-item question.isCurrent:active-question'}}>
                                    {{#link-to 'editQuestion' question.model}}
                                        Q{{friendly-index index}}: {{question.model.stem}}
                                    {{/link-to}}
                                    <i class="fa fa-minus-circle" {{action 'deleteQuestion' question.model}}
                                            title="Delete this question"></i>
                                </div>
                            {{/link-to}}
                        {{/each}}
                        <div class="row">
                            <div {{bind-attr class=':col-md-12 :question-list-item isCreatingNewQuestion:active-question'}}>
                                {{#link-to 'edit.newQuestion' this.model}}
                                    + New question
                                {{/link-to}}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-9 col-fix-right">
            {{outlet}}
        </div>
    </div>
</div>
