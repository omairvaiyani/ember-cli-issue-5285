}

.edit-test-saved {
  position: absolute;
  bottom: 16px;
  right: 16px;
}

.question-list-item
  padding 6px 28px 6px 15px
  text-overflow ellipsis
  white-space nowrap
  overflow hidden
  a:hover
    text-decoration none

.question-list-item-row
  cursor pointer
  i
    position absolute
    top marginSecondary
    right marginSecondary
    color lightgrey
  i:hover
    color alpha(colorRed, 0.8)
  i:active
    color colorRed

.question-list-item.active-question
  background-color aliceblue

.question-image-thumbnail {
  display: inline-block;
  height: 73px;
  width: 73px;
  vertical-align: top;
  border-radius: 4px;
  box-shadow: 0 3px 6px -2px black;
  cursor: pointer;
  background-size: cover;
  background-position: 50% 50%;
}

.question-image-add {
  display: inline-block;
  height: 73px;
  width: 73px;
  border-radius: 4px;
  box-shadow: 0 3px 6px -2px black;
  cursor: pointer;
  background-color: rgb(239, 239, 239);
  background-size: cover;
  background-image: url("/img/add-picture/png");
}

.question-image-add:hover {
  background-color: rgb(243, 243, 243);
}

.question-image-add:active {
  background-color: rgb(220, 220, 220);
}

.question-image-add > span {
  margin-top: 10px;
  font-size: 50px;
}

.question-image-input {
  position: absolute;
  left: -9999em;
}

.saving-loader {
  margin: 12px auto 0;
  width: 70px;
  text-align: center;
}

.saving-loader > div {
  width: 18px;
  height: 18px;
  background-color: #B44537;

  border-radius: 100%;
  display: inline-block;
  -webkit-animation: bouncedelay 1.4s infinite ease-in-out;
  animation: bouncedelay 1.4s infinite ease-in-out;
  /* Prevent first frame from flickering when animation starts */
  -webkit-animation-fill-mode: both;
  animation-fill-mode: both;
}

.saving-loader .bounce1 {
  -webkit-animation-delay: -0.32s;
  animation-delay: -0.32s;
}

.saving-loader .bounce2 {
  -webkit-animation-delay: -0.16s;
  animation-delay: -0.16s;
}

@-webkit-keyframes bouncedelay {
  0%, 80%, 100% {
    -webkit-transform: scale(0.0)
  }
  40% {
    -webkit-transform: scale(1.0)
  }
}

@keyframes bouncedelay {
  0%, 80%, 100% {
    transform: scale(0.0);
    -webkit-transform: scale(0.0);
  }
  40% {
    transform: scale(1.0);
    -webkit-transform: scale(1.0);
  }
}
