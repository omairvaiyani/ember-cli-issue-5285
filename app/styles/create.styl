.module-tag
  background: colorOrange;
  white-space: nowrap;
  position: relative;
  displaY: inline-block;
  height: 30px;
  min-width 60px
  border-radius: 24px;
  padding: 0 38px 0 16px
  color: white;
  font-weight 400
  line-height: 32px;
  text-decoration: none;
  -webkit-transition: color .2s;
  cursor: pointer;
  margin-right marginSecondary
  margin-bottom marginSecondary
  &.has-icon
    padding-left 38px
  input[type=text]
    background transparent
    color white
    border none
    width 80px
    height 26px
  ::-webkit-input-placeholder
    color: white
  .action-button
    background: white;
    color: colorInfo
    width: 20px;
    height: 20px;
    border-radius: 50%;
    position: absolute;
    top: 5px;
    right: 10px;
    line-height 18px
    text-align center
    span
      font-size: 18px;
      font-weight: bold;
    &:hover
      background: darken(white, 3);
  .remove-tag
    position: absolute;
    top: 5px;
    right: 10px;
    font-size: 20px;
  .icon
    color white
    position: absolute;
    left: 8px;
    top: 8px;
    font-size: 18px;
  &.edit-tag, &.new-tag
    background colorInfo
  &.inverse
    background alpha(black, 0.4)
    color white
    border-color white
    &:hover
      background alpha(black, 0.3)
  &.no-edit
    padding-right marginPrimary
    cursor default
  &.small
    height: 24px;
    min-width: 50px;
    padding: 0 12px 0 30px;
    line-height: 24px;
    font-size: 10px;
    .icon
      font-size: 14px;
      left: 6px;
      right: 4px;
      top: 6px;

.category-tag
  background: colorBackground;
  white-space: nowrap;
  position: relative;
  displaY: inline-block;
  height: 30px;
  min-width 60px
  border-radius: 24px;
  border 2px solid colorSecondary
  padding: 0 16px 0 34px
  color: colorSecondary;
  font-weight 400
  line-height: 28px;
  text-decoration: none;
  -webkit-transition: color .2s;
  cursor: pointer;
  margin-right marginSecondary
  margin-bottom marginSecondary
  .icon
    color colorSecondary
    position: absolute;
    left: 6px;
    top: 4px;
    font-size: 20px;
  &.inverse
    background alpha(black, 0.10)
    color white
    border-color white
    .icon
      color white
    &:hover
      background alpha(black, 0.06)
  &.no-edit
    cursor default
  &.small
    height: 24px;
    min-width: 50px;
    padding: 0 10px 0 30px;
    line-height: 20px;
    font-size: 10px;
    .icon
      font-size 16px
      left 4px
      right 4px

.privacy-switch {
  position: relative; width: 90px;
  -webkit-user-select:none; -moz-user-select:none; -ms-user-select: none;
}
.privacy-switch-checkbox {
  display: none;
}
.privacy-switch-label {
  display: block; overflow: hidden; cursor: pointer;
  border-radius: 20px;
  border: 2px solid colorPrimary-600;
}
.privacy-switch-inner {
  display: block; width: 200%; margin-left: -100%;
  transition: margin 0.3s ease-in 0s;
}
.privacy-switch-inner:before, .privacy-switch-inner:after {
  display: block; float: left; width: 50%; height: 30px; padding: 0; line-height: 30px;
  font-size: 14px; color: white; font-weight: bold;
  box-sizing: border-box;
}
.privacy-switch-inner:before {
  content: "Public";
  padding-left: 10px;
  background-color: #E93156; color: #FFFFFF;
}
.privacy-switch-inner:after {
  content: "Private";
  padding-right: 10px;
  background-color: #EEEEEE; color: #999999;
  text-align: right;
}
.privacy-switch-switch {
  display: block; width: 26px; height 26px; margin: 4px;
  background: #E8EEF7;
  position: absolute; top: 0; bottom: 0;
  right: 56px;
  border: 2px solid #999999; border-radius: 20px;
  transition: all 0.3s ease-in 0s;
}
.privacy-switch-checkbox:checked + .privacy-switch-label .privacy-switch-inner {
  margin-left: 0;
}
.privacy-switch-checkbox:checked + .privacy-switch-label .privacy-switch-switch {
  right: 0;
}
  
  
  

.category-selection-field {
  padding: 8px;
}

.category-selection-field:first-child {
  padding-bottom: 8px;
}

.category-selection-field:last-child {
  padding-top: 8px;
}

.category-selection-field:hover {
  background: #dddddd;
  cursor: pointer;
  text-decoration: underline;
}

