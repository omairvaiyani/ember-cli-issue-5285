/*
 * Result Page
 */

scoreContainerParam = 90px
.score-container
  position relative
  height scoreContainerParam
  width scoreContainerParam
  text-align center
  line-height scoreContainerParam
  margin-right marginSecondary
  .score
    position absolute
    bottom marginSecondary
    width scoreContainerParam
    font-size 26px
    font-weight 400
    color colorOrange
  .score-label
    position absolute
    top marginPrimary
    width scoreContainerParam
    font-size 12px
    text-transform uppercase
    color lighten(colorText, 10)

.overview-stat-container
  text-align center
  height 60px
  line-height 60px
  margin-left marginSecondary
  margin-right marginSecondary
  .stat
    color colorSecondary
    font-size 30px
    font-weight bold
  .label
    font-size 11px

.response-card
  &:last-child
    margin-bottom 6px !important
  .response-toggle-container
    cursor pointer
    margin -(marginPrimary)
    &:hover
      background-color darken(white, 2)
    &.show-full
      background-color darken(white, 4)
    .question-stem
      font-weight 400
      margin marginPrimary
      width calc(100% - 92px)
    .correctness-icon
      font-size 26px
      width 40px
      color colorRed
      margin marginSecondary
      &.is-correct
        color colorGreen
  .response-body-container
    display none
    margin-top 32px
    margin-bottom marginSecondary
    &.show-full
      display block
    .option
      &.is-correct
        background-color colorGreen
        color lighten(colorGreen, 50)
      &.is-selected.is-incorrect
        background-color colorRed
        color lighten(colorRed, 50)
